{
    "compilerOptions": {
        "sourceMap": false,
        "target": "es2020",
        "module": "Node16",
        "moduleResolution": "Node16",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "@wdio/types",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "expect-webdriverio"
        ]
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
    ]
}
